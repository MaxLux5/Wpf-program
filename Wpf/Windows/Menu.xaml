<Window x:Class="Wpf.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Menu" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Pictures/Menu.jpg"/>
        </Grid.Background>
        <Button Content="Назад" HorizontalAlignment="Left" Height="30" Margin="20,365,0,0" VerticalAlignment="Top" Width="90" Click="Button_Back" Grid.RowSpan="1"/>
        <ComboBox x:Name="ComboBox" MaxDropDownHeight="200" HorizontalAlignment="Center" Height="30" Margin="0,10,0,0" VerticalAlignment="Top" Width="250"/>
        <Button Content="Вывести" HorizontalAlignment="Right" Margin="0,365,20,0" VerticalAlignment="Top" Height="30" Width="90" Click="Button_Display"/>

    </Grid>
</Window>
